<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/LoginText1"
            android:layout_width="57dp"
            android:layout_height="23.3dp"
            android:layout_marginStart="151dp"
            android:letterSpacing="-0.04"
            android:text="회원가입"
            android:textColor="#191919"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/BackButton"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/white"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/colorbutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circlebutton"
        android:gravity="center_horizontal|center_vertical"
        android:letterSpacing="0"
        android:lineSpacingExtra="-9sp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <Button
        android:id="@+id/graybutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/graycirclebutton"
        android:gravity="center_horizontal|center_vertical"
        android:letterSpacing="0"
        android:lineSpacingExtra="-9sp"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />



    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorbutton">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/LoginIdText1"
                android:layout_width="38dp"
                android:layout_height="20.7dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.04"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/Login1IdEditText"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login1editshape"
                android:hint="영문, 숫자 5~11자"
                android:letterSpacing="-0.04"
                android:paddingLeft="12dp"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginIdText1" />

            <TextView
                android:id="@+id/LoginPwdText2"
                android:layout_width="50dp"
                android:layout_height="20.7dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.04"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <EditText
                android:id="@+id/Login1PwdEditText"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/login1editshape"
                android:ems="10"
                android:hint="숫자, 영문, 특수문자 조합 최소 8자"
                android:inputType="textPassword"
                android:letterSpacing="-0.04"
                android:paddingLeft="12dp"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginPwdText2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="284dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="@+id/Login1PwdEditText"
                app:layout_constraintTop_toTopOf="@+id/Login1PwdEditText"
                app:srcCompat="@drawable/eyes_off" />

            <EditText
                android:id="@+id/Login1PwdEditText1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login1editshape"
                android:hint="비밀번호 재입력"
                android:inputType="textPassword"
                android:letterSpacing="-0.04"
                android:paddingLeft="12dp"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Login1PwdEditText" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="284dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="@+id/Login1PwdEditText1"
                app:layout_constraintTop_toTopOf="@+id/Login1PwdEditText1"
                app:srcCompat="@drawable/eyes_off" />

            <TextView
                android:id="@+id/LoginEmailText"
                android:layout_width="38dp"
                android:layout_height="20.7dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.04"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/Login1EmailEditText"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login1editshape"
                android:letterSpacing="-0.04"
                android:paddingLeft="12dp"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginEmailText" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="178dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.04"
                android:text="계정 분실 시 본인인증 정보로 활용됩니다."
                android:textColor="#999999"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <Button
                android:id="@+id/LoginNextButton"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/nextgraybutton"
                android:text="다음"
                android:textColor="#bebebe"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="116dp"
                android:layout_height="17.3dp"
                android:layout_marginStart="98dp"
                android:layout_marginTop="12dp"
                android:letterSpacing="-0.04"
                android:text="이미 계정이 있으신가요?"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginNextButton" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.04"
                android:text="영문, 숫자 5~11자를 입력해야 됩니다."
                android:textSize="11.3sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Login1IdEditText" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="비밀번호가 일치하지 않습니다."
                android:textSize="11.3sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Login1PwdEditText1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:textSize="11.3sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Login1EmailEditText" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="로그인"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#000000"
                android:letterSpacing="-0.04"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/LoginNextButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
    <!--android:inputType="textPersonName"!-->